    <!-- Update Route Modal -->
    <div id="update-route-modal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2>Update Route</h2>
            <form id="update-route-form">
                <label for="from">From:</label>
                <input type="text" id="from" name="from" placeholder="Starting point" required>
                <label for="via">Via (comma-separated):</label>
                <input type="text" id="via" name="via" placeholder="Intermediate stops" required>
                <label for="to">To:</label>
                <input type="text" id="to" name="to" placeholder="Destination" required>
                <button type="submit">Update Route</button>
            </form>
        </div>
    </div>

    <script src="/driver-dashboard.js"></script>
</body>

